@{
    ViewData["Title"] = "Simple Web Calculator";
}

<h2>Simple Web Calculator</h2>

<form asp-controller="Home" asp-action="Calculate" method="post">
    <div>
        <label for="number1">Número 1:</label>
        <input type="number" step="any" id="number1" name="number1" required />
    </div>
    <div>
        <label for="number2">Número 2:</label>
        <input type="number" step="any" id="number2" name="number2" required />
    </div>
    <div>
        <label for="operation">Operación:</label>
        <select id="operation" name="operation">
            <option value="+">Add (+)</option>
            <option value="-">Substract (-)</option>
            <option value="*">Multiply (*)</option>
            <option value="/">Divide (/)</option>
        </select>
    </div>
    <div>
        <button type="submit">Calcular</button>
    </div>
</form>

@if (ViewData["Result"] != null)
{
    <h3>Operation: @ViewData["Number1"] @ViewData["Operation"] @ViewData["Number2"]</h3>
    <h3>Result: @ViewData["Result"]</h3>
}
@if (ViewData["ErrorMessage"] != null)
{
    <h3 style="color: red;">Error: @ViewData["ErrorMessage"]</h3>
}
